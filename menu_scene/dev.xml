<?xml version="1.0" encoding="UTF-8"?>
<test-scene>
    <list x="0.5vw" y="0.8vh" anchor_x="center" anchor_y="center" size="60" pady="2em">
        <!-- CheckButton -->
        <div>
        <list padx=".3vw" x=".2vw" pady="0" frame_color="#cccccc" hover_color="#848484">
        <checkbutton 
            color="#11ee11"
        />
        <checkbutton 
            size="45px"
            color="#11ee11"
        />
        <checkbutton 
            size="30px"
            color="#11ee11"
        />
        </list>
        </div>
        <!-- Entry -->
        <entry 
            text="Введите текст" 
            font="Consolas"
            maxlen="20"
            color="#2ecc71"
            hover_color="#f1c40f"
            frame_color="#95a5a6"
        />
        
        <!-- RangeSlider -->
        <rangeslider 
            width="300px" 
            height="8px"
            thumb_radius="15px"
            color="#cccccc"
            hover_color="#848484"
            frame_color="#404040"
        />
        
        <!-- SelectorInRow -->
        <selector_in_row 
            options="Выбор|опции|в|строчку" 
            default="1"
            color="#cccccc"
            hover_color="#848484"
            arrow_size=".5em"
        />
        
        <!-- Кнопка для демонстрации работы -->
        <button 
            text="Проверить значения" 
            command="show_values"
            hover_color="#1abc9c"
        />
    </list>
</test-scene>